<?xml version="1.0" encoding="utf-8"?>
<otus.homework.coroutines.CatsView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/iv_cat_image"
        app:layout_constraintEnd_toEndOf="@id/iv_cat_image"
        app:layout_constraintStart_toStartOf="@id/iv_cat_image"
        app:layout_constraintTop_toTopOf="@id/iv_cat_image" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_cat_image"
        android:layout_width="256dp"
        android:layout_height="256dp"
        app:layout_constraintBottom_toTopOf="@id/tv_fact"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_fact"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:scrollbars="vertical"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toTopOf="@id/btn_more_facts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_cat_image" />

    <Button
        android:id="@+id/btn_more_facts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/more_facts"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</otus.homework.coroutines.CatsView>